
public class Logo {

	public static void logo() {
		
		int rows = 7;
		
		//Piramide hacia abajo
		
        for (int i = rows; i >= 2; i -= 2) {
            for (int b = 0; b < (rows-i)/2; b++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
        
        // Piramide hacia arriba
        
        for (int i = 1; i <= rows; i += 2) {
            for (int b = 0; b < (rows-i)/2; b++) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
        
        // Prueba
        
        for (int i = 1; i <= rows; i += 2) {
            for (int b = 0; b < (rows-i)/2; b++) {
                System.out.print(" ");
            }
            
            for (int j = 1; j <= i*2; j = j+i) {
            	System.out.print("*");
            	for(int h = j; h >= 2; h = h-i) {
            		System.out.print(" ");
            	}
            }

           
            System.out.println();
        }
        
        

	}
	
	public static void main(String[] args) {
		
		logo();


	}

}
