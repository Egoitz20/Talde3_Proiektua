package Kontsultak;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

import Funciones.Clear;
import Funciones.Logo;
import Funciones.MenuP;

public class Bezeroak {

	public static void BezeroMenua() {
        Clear func_clear = new Clear();
        Logo func_logo = new Logo();
        MenuP func_menup = new MenuP();
        Scanner scanner = new Scanner(System.in);
		
		String menu3 = "";
        boolean m_exist3 = false;

        while (!menu3.equals("3")) { 
            func_clear.clear();
            func_logo.logo();
            
            System.out.println("BEZEROEN MENUA");
            System.out.println("");
            System.out.println("1) Bezeroen kontaktuak");
            System.out.println("2) Bezero baten faktura");
            System.out.println("3) Bueltatu");
            System.out.println("(1, 2 edo 3)");
            
            if(m_exist3 == true) {
            	System.out.println();
            	System.out.println("Ez da existitzen aukera hau sartu beste bat: ");
            }
            
            menu3 = scanner.nextLine();
            String letra = "";
            
            switch (menu3) {
                case "1":
                	letra = "";

                	BezeroContc();
                	
                	while(!letra.equals("atera")){
                		System.out.println();
                    	System.out.println("Sartu 'atera': ");
                    	letra = scanner.nextLine();
                    	letra = letra.toLowerCase();
                	}
                    break;
                case "2":
                	letra = "";

                	
                	while(!letra.equals("atera")){
                		System.out.println();
                    	System.out.println("Sartu 'atera': ");
                    	letra = scanner.nextLine();
                    	letra = letra.toLowerCase();
                	}
                    break;
                case "3":
                	func_menup.menup();
                default:
                    m_exist3 = true;
                    break;
            }
        }
	}
	
	public static void BezeroContc() {
Scanner scanner = new Scanner(System.in);
		
		try {
            FileReader frb = new FileReader("DB/BEZERO.txt");  // Ruta al archivo de bezero
            FileReader frt = new FileReader("DB/BEZERO_TELEFONO.txt");  // Ruta al archivo de bezero telf
            BufferedReader brb = new BufferedReader(frb);
            BufferedReader brt = new BufferedReader(frt);
            
            String lerroaB;
            String lerroaT;
            boolean primeraLinea = true;

            // Leer el archivo línea por línea
            while ((lerroaB = brb.readLine()) != null && (lerroaT = brt.readLine()) != null) {
                if (primeraLinea) {
                    primeraLinea = false;  // Saltamos la primera línea (encabezados)
                    continue;
                }
                
                String[] lerroZatiakB = lerroaB.split("\t");
                
                String id = lerroZatiakB[0];
                String izena = lerroZatiakB[1];
                String abizena = lerroZatiakB[2];
                String emaila = lerroZatiakB[4];
                
                String[] lerroZatiakT = lerroaT.split("\t");
                
                String id_bezero = lerroZatiakT[1];
                String zbk = lerroZatiakT[2];

                System.out.println(izena + "	" + abizena + "	" + emaila + "	" + zbk);

            }
                
            brb.close();
            frb.close();
            brt.close();
            frt.close();
            
        } catch (FileNotFoundException e) {
            System.out.println("Errorea: Fitxategia ezin da aurkitu.");
        } catch (IOException e) {
            System.out.println("Errorea: Fitxategia irakurtzean arazo bat gertatu da.");
        }
	}
	
}
